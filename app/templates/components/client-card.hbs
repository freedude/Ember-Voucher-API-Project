<div class="col client-name">
    <p class="card-title">{{fa-icon "address-card" class="right"}}{{item.firstName}} {{item.lastName}}</p>
</div>
<div class="col client-email">
    <p class="card-title">{{fa-icon "envelope" class="right"}}{{item.email}}</p>
</div>
<div class="col client-mobile">
    <p class="card-title">{{fa-icon "phone" class="right"}}{{item.mobile}}</p>
</div>

{{#if showVoucherButton}}
<div class="col client-mobile">
    <button type="button" class="btn btn-secondary" id="createVoucherButton">
        <span id="testClientCardCreated">Create Voucher</span>
    </button>
</div>
{{/if}}

{{#if showVoucherCard}}
{{voucher-input
    createVoucherRecord=(action "createVoucherRecord")
    client=client
}}
{{/if}}

{{#if loadingVoucher}}
<img class="loading-icon" src="images/loading.gif" alt="spinning loading icon">
{{/if}}


{{#if showRewardCard}}
{{voucher-card
    voucher=voucher
    }}
{{/if}}

{{#if showErrorMessage}}
<div class="alert alert-danger" id="voucherError" role="alert">
    There was an Error creating voucher for client, Please try again later
</div>

{{/if}}